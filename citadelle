    <!-- PUTER.JS -->
    <script src="https://js.puter.com/v2"></script>
   <script>
        // --- THE ASPIRATIONAL LINEUP ---
        // We ask for the stars, but we have a safety net.
        const models = [
            { id: 1, name: 'openrouter:meta-llama/llama-3.1-405b-instruct:free', label: 'LLAMA 405B' },
            { id: 2, name: 'openrouter:nousresearch/hermes-3-llama-3.1-405b:free', label: 'HERMES 405B' },
            { id: 3, name: 'openrouter:deepseek/deepseek-r1:free', label: 'DEEPSEEK R1' },
            { id: 4, name: 'mistralai/devstral-2512:free', label: 'DEVSTRAL 2512' }, // The Hero
            { id: 5, name: 'openrouter:google/gemma-3-27b-it:free', label: 'GEMMA 3 27B' },
            { id: 6, name: 'openrouter:qwen/qwen3-235b-a22b:free', label: 'QWEN 3 MAX' },
            { id: 7, name: 'openrouter:google/gemini-2.0-flash-exp:free', label: 'GEMINI 2.0' },
            { id: 8, name: 'openrouter:meta-llama/llama-3.3-70b-instruct:free', label: 'LLAMA 70B' },
            { id: 9, name: 'openrouter:openai/gpt-oss-120b:free', label: 'GPT OSS' }
        ];

        // THE BACKBONE (The only one that works for sure)
        const BACKBONE_MODEL = 'mistralai/devstral-2512:free';

        // DOM Elements
        const btn = document.getElementById('run-button');
        const daemonLog = document.getElementById('daemon-log');
        const promptInput = document.getElementById('prompt-input');
        const quantumStatus = document.getElementById('quantum-status');
        const saveBtn = document.getElementById('save-btn');

        let sessionData = {}; 

        function log(msg) {
            if(!daemonLog) return;
            daemonLog.innerHTML += `> ${msg}<br>`;
            daemonLog.scrollTop = daemonLog.scrollHeight;
        }

        if (btn) {
            btn.addEventListener('click', async () => {
                const prompt = promptInput.value.trim();
                
                // EASTER EGGS
                if (prompt.toUpperCase() === 'INKREALM' || prompt.toUpperCase() === 'MAIKA') {
                    triggerGlitch();
                    return; 
                }

                if(!prompt) return log("ERR: EMPTY INPUT");

                btn.disabled = true;
                btn.textContent = "TRANSMITTING...";
                
                sessionData = { prompt: prompt, timestamp: new Date(), results: [] };
                
                models.forEach(m => {
                    const el = document.getElementById(`out-${m.id}`);
                    if(el) el.innerHTML = '<span style="color:var(--ws-grey)">WAITING_SIGNAL...</span>';
                });

                log("INITIATING FEDERATION...");
                log("FAILOVER PROTOCOL: ACTIVE (TARGET: DEVSTRAL)");

                const promises = [];
                
                for (const model of models) {
                    const outDiv = document.getElementById(`out-${model.id}`);
                    if(outDiv) {
                        outDiv.innerHTML = '<span class="generating">ESTABLISHING LINK...</span>';
                        outDiv.style.color = '#00FF33'; 
                    }
                    
                    // Ripple Fire
                    promises.push(runModel(model, prompt));
                    await new Promise(r => setTimeout(r, 600));
                }

                await Promise.all(promises);

                btn.disabled = false;
                btn.textContent = "EXECUTE";
                log("SEQUENCE COMPLETE.");
            });
        }

        async function runModel(model, prompt) {
            const outDiv = document.getElementById(`out-${model.id}`);
            if(!outDiv) return;

            let textBuffer = "";
            let usedBackbone = false;
            
            try {
                if (typeof puter === 'undefined') throw new Error("Puter.js not loaded");

                outDiv.style.color = '#E0E0E0';
                outDiv.innerHTML = "";
                
                // 1. ATTEMPT PRIMARY MODEL
                const stream = await puter.ai.chat(prompt, {
                    model: model.name,
                    stream: true
                });

                for await (const chunk of stream) {
                    if (chunk.text) {
                        textBuffer += chunk.text;
                        outDiv.innerHTML = textBuffer + '<span class="cursor-block"></span>';
                        outDiv.scrollTop = outDiv.scrollHeight;
                    }
                }
                
                outDiv.innerHTML = textBuffer;
                sessionData.results.push({ model: model.label, text: textBuffer });
                updateQuantumState();
                
            } catch (err) {
                // 2. PRIMARY FAILED - INITIATE REROUTE
                console.log(`${model.label} failed. Rerouting to Backbone.`);
                
                // Only rerun if the failed model WASN'T already the backbone
                if (model.name !== BACKBONE_MODEL) {
                    try {
                        outDiv.innerHTML = `<span style="color:var(--ws-yellow)">[ ERR: ${model.label} OFFLINE ]</span><br><span style="color:var(--ws-cyan)">>> REROUTING TO DEVSTRAL NODE...</span><br><br>`;
                        
                        // Reroute request
                        const backupStream = await puter.ai.chat(prompt, {
                            model: BACKBONE_MODEL,
                            stream: true
                        });

                        textBuffer = ""; // Reset buffer for the backup
                        for await (const chunk of backupStream) {
                            if (chunk.text) {
                                textBuffer += chunk.text;
                                // We keep the header warning, append text below
                                outDiv.innerHTML = `<span style="color:var(--ws-yellow)">[ ERR: ${model.label} OFFLINE ]</span><br><span style="color:var(--ws-cyan)">>> REROUTING TO DEVSTRAL NODE...</span><br><br>` + textBuffer + '<span class="cursor-block"></span>';
                                outDiv.scrollTop = outDiv.scrollHeight;
                            }
                        }
                        sessionData.results.push({ model: `${model.label} (REROUTED)`, text: textBuffer });
                        updateQuantumState();
                        log(`REROUTED: ${model.label}`);
                        return; // Exit successfully after backup

                    } catch (backupErr) {
                        // Double Fault
                        showTerminalError(outDiv, model.label, "TOTAL_LINK_FAILURE");
                    }
                } else {
                    // Even the Backbone failed
                    showTerminalError(outDiv, model.label, "CORE_DUMP");
                }
            }
        }

        function showTerminalError(element, label, code) {
            element.innerHTML = `
                <div style="color:var(--ws-alert); display:flex; flex-direction:column; height:100%; justify-content:center; align-items:center; text-align:center; opacity:0.8;">
                    <div style="font-size:24px; margin-bottom:10px;">☠</div>
                    <div style="font-weight:bold; letter-spacing:2px;">[ ${code} ]</div>
                    <div style="font-size:9px; margin-top:5px; color:var(--ws-grey);">ERR: ${label}</div>
                </div>
            `;
            log(`DEAD: ${label}`);
        }

        function triggerGlitch() {
             const glitchText = `
            |ψ⟩ = α|INKREALM⟩ + β|INKY⟩ + γ|MAIKA_ARCHETYPE⟩
            [RECOVERY: Ontology leak 73%]
            ...Inky waters drag back...
            [ERROR: REALITY MATRIX COMPROMISED]
            `;
            const vid = document.querySelector('.monitor-video');
            if(vid) vid.style.filter = "hue-rotate(90deg) contrast(200%)";
            
            let i = 0;
            const speed = 30;
            function typeWriter() {
                if (i < glitchText.length) {
                    const char = glitchText.charAt(i);
                    daemonLog.innerHTML += char === '\n' ? '<br>' : char;
                    daemonLog.scrollTop = daemonLog.scrollHeight;
                    i++;
                    setTimeout(typeWriter, speed);
                }
            }
            typeWriter();
        }

        function clearAll() {
            models.forEach(m => {
                const el = document.getElementById(`out-${m.id}`);
                if (el) el.textContent = "";
            });
            if (promptInput) promptInput.value = "";
            log("BUFFER CLEARED");
        }

        function updateQuantumState() {
            if(sessionData && sessionData.results) {
                localStorage.setItem('citadelle_session', JSON.stringify(sessionData));
                if(quantumStatus) {
                    quantumStatus.style.color = '#00FF33';
                    setTimeout(() => { quantumStatus.style.color = 'var(--ws-cyan)'; }, 500);
                }
            }
        }

        window.addEventListener('load', () => {
            const saved = localStorage.getItem('citadelle_session');
            if (saved) {
                try {
                    sessionData = JSON.parse(saved);
                    if (sessionData.results && sessionData.results.length > 0) {
                        log(`>> RECOVERED ${sessionData.results.length} NODES`);
                        if(quantumStatus) quantumStatus.textContent = 'QUANTUM CIRCUIT: RESTORED';
                    }
                } catch (e) { console.error('Quantum corruption'); }
            }
        });

        if (saveBtn) {
            saveBtn.addEventListener('click', () => {
                if(!sessionData.results || sessionData.results.length === 0) {
                    log("ERR: QUANTUM VOID - NO DATA");
                    return;
                }
                let content = `CITADELLE.CORE LOG // ${sessionData.timestamp}\n`;
                content += `QUERY: ${sessionData.prompt}\n`;
                content += "========================================\n\n";
                sessionData.results.forEach(res => {
                    content += `[ ${res.model} ]\n----------------------------------------\n${res.text}\n\n`;
                });
                const blob = new Blob([content], {type: 'text/plain;charset=utf-8'});
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `CITADELLE_${Date.now()}.txt`;
                document.body.appendChild(a);
                a.click(); 
                document.body.removeChild(a);
                URL.revokeObjectURL(url);
                log(">> LOG MATERIALIZED TO DISK");
            });
        }
        
        if (promptInput) {
            promptInput.addEventListener('keydown', (e) => {
                if(e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    btn.click();
                }
            });
        }
    </script>
</body>
    </html>
