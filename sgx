    // Render link rows
    function createLinkRow(link) {
      const row = document.createElement('div');
      row.className = 'link-row';
      row.setAttribute('data-url', link.url);
      row.setAttribute('data-title', link.title);
      
      row.innerHTML = `
        <div class="link-row-bg" style="background-image: url('${link.image}')"></div>
        <div class="link-row-accent"></div>
        <div class="link-row-content">
          <div class="link-row-text">
            <h3>${link.title}</h3>
            ${link.subtitle ? `<div class="link-row-subtitle">${link.subtitle}</div>` : ''}
          </div>
          <div class="link-row-preview">
            <img src="${link.image}" alt="${link.title}">
          </div>
          <div class="link-row-arrow">â†’</div>
        </div>
      `;
      
      return row;
    }

