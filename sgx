    });

    allLinks.applications.forEach(link => {
      document.getElementById('appLinks').appendChild(createLinkRow(link));
    });

    allLinks.resources.forEach(link => {
      document.getElementById('resourceLinks').appendChild(createLinkRow(link));
    });

    // Populate downloads
    downloads.forEach(download => {
      const item = document.createElement('a');
      item.className = 'download-item';
      item.href = download.url;
      item.download = '';
      item.innerHTML = `
        <span>${download.icon}</span>
        <span>${download.title}</span>
      `;
      document.getElementById('downloadsList').appendChild(item);
    });

    // GSAP Animations
    gsap.to('.hero h1', {
      opacity: 1,
      duration: 1.4,
      ease: 'cubic-bezier(0.76, 0, 0.24, 1)',
      delay: 0.2
    });

    gsap.to('.hero p', {
      opacity: 1,
      duration: 1,
      delay: 0.7
    });

    gsap.to('.scroll-indicator', {
      opacity: 1,
      duration: 1,
      delay: 1.2
    });

    // Section titles
    gsap.utils.toArray('.section-title').forEach(title => {
      gsap.to(title, {
        opacity: 1,
        duration: 1,
        scrollTrigger: {
          trigger: title,
          start: 'top 80%',
        }
      });
    });

    // Link rows
    gsap.utils.toArray('.link-row').forEach((row, i) => {
      gsap.to(row, {
        opacity: 1,
        duration: 0.8,
        delay: (i % 10) * 0.05,
        scrollTrigger: {
          trigger: row,
          start: 'top 90%',
        }
      });
    });

    // Downloads grid
    gsap.to('.downloads-grid', {
      opacity: 1,
      duration: 1,
      scrollTrigger: {
        trigger: '.downloads-grid',
        start: 'top 80%',
      }
    });

    // Footer
    gsap.to('footer', {
      opacity: 1,
      duration: 1,
      scrollTrigger: {
        trigger: 'footer',
        start: 'top 90%',
      }
    });

    // Modal functionality
    const modalOverlay = document.getElementById('modalOverlay');
    const modalContainer = document.getElementById('modalContainer');
    const modalIframe = document.getElementById('modalIframe');
    const modalTitle = document.getElementById('modalTitle');
    const closeModalBtn = document.getElementById('closeModal');
    const loadingIndicator = document.getElementById('loadingIndicator');

    function openModal(url, title) {
      modalTitle.textContent = title;
      modalIframe.src = url;
      
      modalOverlay.style.display = 'block';
      modalContainer.style.display = 'block';
      loadingIndicator.style.display = 'block';
      modalIframe.style.display = 'none';

      gsap.timeline()
        .to(modalOverlay, {
          opacity: 1,
          duration: 0.8,
          ease: 'cubic-bezier(0.84, 0, 0.16, 1)',
        })
        .to(modalContainer, {
          opacity: 1,
          scale: 1,
          duration: 0.8,
          ease: 'cubic-bezier(0.76, 0, 0.24, 1)',
        }, '-=0.2');
    }

    function closeModal() {
      gsap.timeline()
        .to(modalContainer, {
          opacity: 0,
          scale: 0.9,
          duration: 0.6,
          ease: 'cubic-bezier(0.84, 0, 0.16, 1)',
        })
        .to(modalOverlay, {
          opacity: 0,
          duration: 0.4,
          ease: 'cubic-bezier(0.76, 0, 0.24, 1)',
          onComplete: () => {
            modalOverlay.style.display = 'none';
            modalContainer.style.display = 'none';
            modalIframe.src = '';
          }
        }, '-=0.1');
    }

    modalIframe.addEventListener('load', function() {
      loadingIndicator.style.display = 'none';
      modalIframe.style.display = 'block';
      gsap.from(modalIframe, {
        opacity: 0,
        duration: 0.6,
        ease: 'cubic-bezier(0.76, 0, 0.24, 1)',
      });
    });

    // Event listeners
    document.addEventListener('click', function(e) {
      const linkRow = e.target.closest('.link-row');
      if (linkRow) {
        const url = linkRow.getAttribute('data-url');
        const title = linkRow.getAttribute('data-title');
        openModal(url, title);
      }
    });

    closeModalBtn.addEventListener('click', closeModal);
    modalOverlay.addEventListener('click', closeModal);

    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && modalContainer.style.display === 'block') {
        closeModal();
      }
    });
  </script>
</body>
</html>
