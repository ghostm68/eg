/* Define styles for the footer element */
footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50px;
  background-color: #333;
  color: #fff;
  text-align: center;
}

/* Define styles for the ul element in the footer */
footer ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

/* Define styles for the li element in the footer */
footer li {
  float: left;
  width: 25%;
  height: 100%;
  text-align: center;
  cursor: pointer;
  transition: background-color 0.2s ease-in-out;
}

/* Define styles for the a element in the footer */
footer li a {
  display: inline-block;
  width: 60%;
  height: 60%;
  margin: 20% auto;
  border-radius: 50%;
  background-color: #ccc;
  color: #333;
  line-height: 50px;
  text-decoration: none;
}

/* Define hover styles for the li element in the footer */
footer li:hover {
  background-color: rgba(0, 0, 0, 0.2);
}

/* Define hover styles for the a element in the footer */
footer li:hover a {
  background-color: #fff;
  color: #333;
}
